---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <!-- Hero de la página Contacto -->
  <div class="relative bg-gradient-to-b from-[#5E388D]/10 to-white/5 py-16 md:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-[#5E388D] mb-6 font-['Montserrat',_sans-serif] mt-10">Contáctanos</h1>
        <div class="w-16 h-1 bg-[#F59D07] mx-auto mb-8 rounded-full"></div>
        <p class="text-lg text-gray-700 max-w-3xl mx-auto">
          Estamos aquí para ayudarte con cualquier pregunta sobre el cuidado de tus mascotas.
        </p>
      </div>
    </div>
  </div>
  
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
        
        <!-- Información de contacto -->
        <div class="lg:col-span-1 order-2 lg:order-1">
          <div class="bg-gradient-to-br from-[#5E388D]/5 to-[#4DBECD]/5 p-8 rounded-2xl shadow-sm h-full">
            <h2 class="text-2xl font-semibold text-[#5E388D] mb-6 font-['Montserrat',_sans-serif]">Información de Contacto</h2>
            
            <div class="space-y-6">
              <!-- Correo -->
              <div class="flex items-start">
                <div class="bg-[#5E388D]/10 p-3 rounded-full mr-4">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-[#5E388D]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-medium text-gray-800">Correo Electrónico</h3>
                  <p class="text-[#F59D07] hover:text-[#5E388D] transition-colors duration-300">info@openpet.com</p>
                </div>
              </div>
              
              <!-- Teléfono -->
              <div class="flex items-start">
                <div class="bg-[#4DBECD]/10 p-3 rounded-full mr-4">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-[#4DBECD]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-medium text-gray-800">Teléfono</h3>
                  <p class="text-gray-600">+123 456 7890</p>
                </div>
              </div>
              
              <!-- Dirección -->
              <div class="flex items-start">
                <div class="bg-[#EB5B7C]/10 p-3 rounded-full mr-4">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-[#EB5B7C]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-medium text-gray-800">Dirección</h3>
                  <p class="text-gray-600">Av. Principal 1234, Ciudad, País</p>
                </div>
              </div>
              
              <!-- Horario -->
              <div class="flex items-start">
                <div class="bg-[#F59D07]/10 p-3 rounded-full mr-4">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-[#F59D07]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-medium text-gray-800">Horario de Atención</h3>
                  <p class="text-gray-600">Lunes a Viernes: 9:00 - 18:00<br/>Sábados: 9:00 - 13:00</p>
                </div>
              </div>
            </div>
            
            <!-- Social Media -->
            <div class="mt-10">
              <h3 class="text-lg font-medium text-gray-800 mb-4">Síguenos en redes sociales</h3>
              <div class="flex space-x-4">
                <a href="#" class="bg-white p-2.5 rounded-full text-[#5E388D] hover:bg-[#5E388D] hover:text-white transition-all duration-300 shadow-sm hover:shadow-md hover:-translate-y-1" aria-label="Facebook">
                  <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"></path>
                  </svg>
                </a>
                <a href="#" class="bg-white p-2.5 rounded-full text-[#EB5B7C] hover:bg-[#EB5B7C] hover:text-white transition-all duration-300 shadow-sm hover:shadow-md hover:-translate-y-1" aria-label="Instagram">
                  <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z"></path>
                  </svg>
                </a>
                <a href="#" class="bg-white p-2.5 rounded-full text-[#4DBECD] hover:bg-[#4DBECD] hover:text-white transition-all duration-300 shadow-sm hover:shadow-md hover:-translate-y-1" aria-label="Twitter">
                  <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"></path>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Formulario de contacto -->
        <div class="lg:col-span-2 order-1 lg:order-2">
          <div class="bg-white rounded-2xl shadow-sm p-8 border border-[#5E388D]/10">
            <h2 class="text-2xl font-semibold text-[#5E388D] mb-6 font-['Montserrat',_sans-serif]">Envíanos un mensaje</h2>
            <form class="space-y-6">
              <!-- Nombre -->
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="nombre" class="block text-sm font-medium text-gray-700 mb-1">Nombre</label>
                  <input type="text" id="nombre" name="nombre" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-[#5E388D]/50 focus:border-[#5E388D] transition duration-200 outline-none" placeholder="Tu nombre">
                </div>
                <div>
                  <label for="apellido" class="block text-sm font-medium text-gray-700 mb-1">Apellido</label>
                  <input type="text" id="apellido" name="apellido" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-[#5E388D]/50 focus:border-[#5E388D] transition duration-200 outline-none" placeholder="Tu apellido">
                </div>
              </div>
              
              <!-- Email y Teléfono -->
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                  <input type="email" id="email" name="email" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-[#5E388D]/50 focus:border-[#5E388D] transition duration-200 outline-none" placeholder="tucorreo@ejemplo.com">
                </div>
                <div>
                  <label for="telefono" class="block text-sm font-medium text-gray-700 mb-1">Teléfono (opcional)</label>
                  <input type="tel" id="telefono" name="telefono" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-[#5E388D]/50 focus:border-[#5E388D] transition duration-200 outline-none" placeholder="Tu número de teléfono">
                </div>
              </div>
              
              <!-- Asunto -->
              <div>
                <label for="asunto" class="block text-sm font-medium text-gray-700 mb-1">Asunto</label>
                <input type="text" id="asunto" name="asunto" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-[#5E388D]/50 focus:border-[#5E388D] transition duration-200 outline-none" placeholder="Asunto de tu mensaje">
              </div>
              
              <!-- Mensaje -->
              <div>
                <label for="mensaje" class="block text-sm font-medium text-gray-700 mb-1">Mensaje</label>
                <textarea id="mensaje" name="mensaje" rows="5" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-[#5E388D]/50 focus:border-[#5E388D] transition duration-200 outline-none" placeholder="Escribe tu mensaje aquí..."></textarea>
              </div>
              
              <!-- Botón de envío -->
              <div class="flex justify-end">
                <button type="button" class="bg-[#5E388D] text-white px-8 py-3 rounded-full font-medium hover:bg-[#5E388D]/90 transition-colors duration-300 shadow-md hover:shadow-lg flex items-center space-x-2 group">
                  <span>Enviar Mensaje</span>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 group-hover:translate-x-1 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                  </svg>
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Mapa de ubicación (placeholder) -->
  <section class="py-16 bg-gradient-to-b from-white to-[#5E388D]/5">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-[#5E388D]/5 p-8 rounded-2xl text-center">
        <h2 class="text-2xl font-semibold text-[#5E388D] mb-4 font-['Montserrat',_sans-serif]">Nuestra Ubicación</h2>
        <p class="text-gray-600 mb-6">Aquí puedes encontrarnos fácilmente</p>
        <div class="bg-gray-200 rounded-xl h-[400px] flex items-center justify-center">
          <p class="text-[#5E388D] font-medium">Mapa de ubicación (próximamente)</p>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ sección (preguntas frecuentes) -->
  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-semibold text-[#5E388D] mb-4 font-['Montserrat',_sans-serif]">Preguntas Frecuentes</h2>
        <div class="w-16 h-1 bg-[#4DBECD] mx-auto mb-4"></div>
        <p class="text-gray-600">Respuestas a las preguntas más comunes</p>
      </div>
      
      <div class="space-y-4">
        <!-- Pregunta 1 -->
        <div class="border border-gray-200 rounded-lg overflow-hidden shadow-sm hover:shadow transition-all duration-300">
          <button class="flex items-center justify-between w-full p-5 text-left bg-white hover:bg-[#5E388D]/5 transition-all duration-300">
            <span class="font-medium text-[#5E388D] text-lg">¿Cómo puedo registrar a mi mascota?</span>
            <svg class="h-5 w-5 text-[#5E388D]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div class="p-5 bg-white border-t border-gray-200 mb-5">
            <p class="text-gray-600">Para registrar a tu mascota, simplemente crea una cuenta en nuestra plataforma y sigue los pasos en la sección "Mi Perfil" para añadir los datos de tu mascota. El proceso es muy sencillo y solo te tomará unos minutos.</p>
          </div>
        </div>
        
        <!-- Pregunta 2 -->
        <div class="border border-gray-200 rounded-lg overflow-hidden shadow-sm hover:shadow transition-all duration-300">
          <button class="flex items-center justify-between w-full p-5 text-left bg-white hover:bg-[#5E388D]/5 transition-all duration-300">
            <span class="font-medium text-[#5E388D] text-lg">¿La aplicación es gratuita?</span>
            <svg class="h-5 w-5 text-[#5E388D]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div class="p-5 bg-white border-t border-gray-200 mb-5">
            <p class="text-gray-600">Sí, ofrecemos un plan básico gratuito que incluye las funcionalidades esenciales. También tenemos planes premium con características adicionales para quienes necesiten más funcionalidades como seguimiento avanzado, recordatorios personalizados y asesoramiento veterinario.</p>
          </div>
        </div>
        
        <!-- Pregunta 3 -->
        <div class="border border-gray-200 rounded-lg overflow-hidden shadow-sm hover:shadow transition-all duration-300">
          <button class="flex items-center justify-between w-full p-5 text-left bg-white hover:bg-[#5E388D]/5 transition-all duration-300">
            <span class="font-medium text-[#5E388D] text-lg">¿Cómo contactar con soporte técnico?</span>
            <svg class="h-5 w-5 text-[#5E388D]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div class="p-5 bg-white border-t border-gray-200 mb-5">
            <p class="text-gray-600">Puedes contactar con nuestro equipo de soporte técnico a través del formulario de contacto en esta página o enviando un correo directamente a <span class="text-[#F59D07] font-medium">support@openpet.com</span>. Nuestro equipo responde en un plazo máximo de 24 horas en días laborables.</p>
          </div>
        </div>
        
        <!-- Pregunta 4 (añadida) -->
        <div class="border border-gray-200 rounded-lg overflow-hidden shadow-sm hover:shadow transition-all duration-300">
          <button class="flex items-center justify-between w-full p-5 text-left bg-white hover:bg-[#5E388D]/5 transition-all duration-300">
            <span class="font-medium text-[#5E388D] text-lg">¿Es segura la información de mi mascota?</span>
            <svg class="h-5 w-5 text-[#5E388D]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div class="p-5 bg-white border-t border-gray-200 mb-5">
            <p class="text-gray-600">Absolutamente. La seguridad de los datos es nuestra prioridad. Utilizamos cifrado de nivel bancario para proteger toda la información personal y de mascotas en nuestra plataforma. Además, cumplimos con todas las regulaciones de protección de datos vigentes.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <script>
    // Función para inicializar el acordeón de FAQ
    function initFAQAccordion() {
      // Seleccionar los botones específicamente en la sección FAQ
      const faqSection = document.querySelector('.max-w-4xl.mx-auto');
      if (!faqSection) return;
      
      const faqButtons = faqSection.querySelectorAll('button');
      const faqPanels = faqSection.querySelectorAll('button + div');
      
      // Configurar los paneles inicialmente
      faqPanels.forEach(panel => {
        // Ocultar panel y añadir transiciones
        if (panel instanceof HTMLElement) {
          panel.style.display = 'none';
          panel.classList.add('transition-all', 'duration-300', 'ease-in-out');
        }
      });
      
      // Añadir controladores de eventos a los botones
      faqButtons.forEach((button) => {
        // Añadir estilos de transición al botón
        button.classList.add('transition-all', 'duration-200');
        
        // Actualizar el ícono del botón según estado
        const updateButtonIcon = (isOpen: boolean): void => {
          const svg = button.querySelector('svg');
          if (svg instanceof SVGElement) {
            // Añadir clase de transición al SVG
            svg.classList.add('transition-transform', 'duration-300');
            
            if (isOpen) {
              // Cuando está abierto, rotar icono y cambiar path
              svg.style.transform = 'rotate(-180deg)';
              svg.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7" />';
              // Destacar botón activo
              button.classList.add('bg-[#5E388D]/10');
            } else {
              // Cuando está cerrado, restaurar icono
              svg.style.transform = 'rotate(0)';
              svg.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />';
              // Remover destacado
              button.classList.remove('bg-[#5E388D]/10');
            }
          }
        };
        
        button.addEventListener('click', () => {
          const content = button.nextElementSibling;
          if (!content || !(content instanceof HTMLElement)) return;
          
          const isOpen = content.style.display === 'block';
          
          // Cerrar todos los paneles y restablecer iconos
          faqPanels.forEach(panel => {
            if (panel instanceof HTMLElement) {
              panel.style.display = 'none';
              panel.style.opacity = '0';
              panel.style.maxHeight = '0px';
            }
          });
          
          faqButtons.forEach(btn => {
            updateButtonIcon(false);
          });
          
          // Si no estaba abierto, abrirlo con animación
          if (!isOpen) {
            content.style.display = 'block';
            content.style.opacity = '0';
            
            // Pequeño retardo para permitir la animación
            setTimeout(() => {
              if (content instanceof HTMLElement) {
                content.style.opacity = '1';
                content.style.maxHeight = content.scrollHeight + 'px';
              }
            }, 10);
            
            updateButtonIcon(true);
          }
        });
      });
      
      // Abrir el primer panel por defecto con animación
      if (faqButtons.length > 0) {
        const firstPanel = faqButtons[0].nextElementSibling;
        if (firstPanel instanceof HTMLElement) {
          firstPanel.style.display = 'block';
          firstPanel.style.opacity = '1';
          
          // Destacar el primer botón e icono
          faqButtons[0].classList.add('bg-[#5E388D]/10');
          const firstButtonSvg = faqButtons[0].querySelector('svg');
          if (firstButtonSvg instanceof SVGElement) {
            firstButtonSvg.style.transform = 'rotate(-180deg)';
            firstButtonSvg.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7" />';
            firstButtonSvg.classList.add('transition-transform', 'duration-300');
          }
        }
      }
    }

    // Inicializar en carga de página y después de navegación por Astro
    document.addEventListener('DOMContentLoaded', initFAQAccordion);
    document.addEventListener('astro:page-load', initFAQAccordion);
  </script>
</Layout>